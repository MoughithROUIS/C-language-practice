char list[][6] = {"gamer", "coder", "maker", "first", "horse", "water", "stick", "brick", "paths", "drugs", "death"}; 
int size = sizeof(list) / sizeof(list[0]);
char* generateword(char list[][6]){
    srand(time(NULL));
    int r = rand() % size;
    char word[]="";
    for ( int i=0 ; list[r][i] != "\0"; i++){
        sprintf(word, "%s,", strupr(list[r][i]));
    }
    return word;
}

